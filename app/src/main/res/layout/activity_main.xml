<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/widget32"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_weight="0.33"
        android:background="#000000" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textBox"
        android:layout_row="0"
        android:layout_column="3"
        android:background="#ffffff"
        android:gravity="center"
        android:layout_marginBottom="5dp" />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/menuFlipper"
        android:animateFirstView="false"
        android:background="#ffffff"
        android:layout_weight="0.67"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/menuGrid"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="false">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/btLoad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Load"
                        android:layout_column="0" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cam"
                        android:id="@+id/btCam"
                        android:layout_column="1" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:id="@+id/btSave"
                        android:layout_column="2" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Choose"
                        android:id="@+id/btChoose"
                        android:layout_column="0" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/paramGrid">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="30"
                android:id="@+id/paramBarRow1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/paramBarText1"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textIsSelectable="false"
                    android:gravity="center" />

                <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/paramBar1"
                    android:max="255"
                    android:indeterminate="false"
                    android:background="#40ff0000"
                    android:layout_column="1"
                    android:layout_weight="29"
                    android:layout_marginRight="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/paramBarRow2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/paramBarText2"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:gravity="center" />

                <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/paramBar2"
                    android:max="255"
                    android:background="#4000ff00"
                    android:layout_column="1"
                    android:layout_weight="29"
                    android:layout_marginRight="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/paramBarRow3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/paramBarText3"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:gravity="center" />

                <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/paramBar3"
                    android:max="255"
                    android:background="#400000ff"
                    android:layout_column="1"
                    android:layout_weight="29"
                    android:layout_marginRight="5dp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/paramBtRow">

                <Button
                    android:id="@+id/btApply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apply"
                    android:layout_column="0"
                    android:visibility="gone" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Annuler"
                    android:id="@+id/btCancel"
                    android:visibility="gone" />

            </TableRow>
        </TableLayout>

    </ViewFlipper>

</LinearLayout>