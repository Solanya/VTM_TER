<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/widget32"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#17456f">

    <ImageView
        android:id="@+id/imageDisplay"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_row="2"
        android:layout_column="0"
        android:layout_weight="0.35"
        android:background="#232323" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/textBox"
        android:layout_row="0"
        android:layout_column="3"
        android:background="#17456f"
        android:gravity="center"
        android:layout_marginBottom="5dp" />

    <ViewFlipper
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/menuFlipper"
        android:animateFirstView="false"
        android:background="#17456f"
        android:layout_weight="0.65"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/menuLayout">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:id="@+id/menuGrid"
                android:columnOrderPreserved="false"
                android:useDefaultMargins="false">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:baselineAligned="false"
                    android:measureWithLargestChild="false"
                    android:layout_weight="1">

                    <ImageButton
                        android:id="@+id/btLoad"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Load"
                        android:layout_column="0"
                        android:background="@mipmap/ic_load"
                        android:cropToPadding="false"
                        android:adjustViewBounds="false"
                        android:layout_gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Cam"
                        android:id="@+id/btCam"
                        android:layout_column="1"
                        android:background="@mipmap/ic_cam"
                        android:layout_gravity="center_vertical" />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Save"
                        android:id="@+id/btSave"
                        android:layout_column="2"
                        android:background="@mipmap/ic_save"
                        android:layout_gravity="center_vertical" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Choose"
                        android:id="@+id/btChoose"
                        android:layout_column="0"
                        android:background="@mipmap/ic_process"
                        android:layout_gravity="center_vertical" />

                </TableRow>

            </TableLayout>

        </LinearLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/paramGrid">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:weightSum="30"
                android:id="@+id/paramBarRow1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/paramBarText1"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:textIsSelectable="false"
                    android:gravity="center" />

                <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/paramBar1"
                    android:max="255"
                    android:indeterminate="false"
                    android:background="#40ff0000"
                    android:layout_column="1"
                    android:layout_weight="29"
                    android:layout_marginRight="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/paramBarRow2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/paramBarText2"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:gravity="center" />

                <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/paramBar2"
                    android:max="255"
                    android:background="#4000ff00"
                    android:layout_column="1"
                    android:layout_weight="29"
                    android:layout_marginRight="5dp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/paramBarRow3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Text"
                    android:id="@+id/paramBarText3"
                    android:layout_column="0"
                    android:layout_weight="1"
                    android:gravity="center" />

                <SeekBar
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/paramBar3"
                    android:max="255"
                    android:background="#400000ff"
                    android:layout_column="1"
                    android:layout_weight="29"
                    android:layout_marginRight="5dp" />

            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/paramBtRow">

                <ImageButton
                    android:id="@+id/btApply"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Apply"
                    android:layout_column="0"
                    android:visibility="visible"
                    android:background="@mipmap/ic_apply"
                    android:layout_gravity="center_vertical" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="Annuler"
                    android:id="@+id/btUndo"
                    android:visibility="visible"
                    android:background="@mipmap/ic_undo"
                    android:layout_gravity="center_vertical" />

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/progressLayout"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/progressText"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/progressBar"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:max="1"
                android:progress="0" />

        </LinearLayout>

    </ViewFlipper>

</LinearLayout>